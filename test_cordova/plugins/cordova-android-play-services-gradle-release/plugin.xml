<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-android-play-services-gradle-release"
        version="4.0.0">

    <name>cordova-android-play-services-gradle-release</name>
    <description>Cordova/Phonegap plugin for Android to align versions of the Play Services library components specified by other plugins to a specific version</description>
    <author>Dave Alden</author>

    <engines>
        <engine name="cordova" version=">=8.0.0" />
        <engine name="cordova-android" version=">=7.0.0" />
    </engines>

    <platform name="android">
       <hook type="after_prepare" src="scripts/apply-changes.js" />
        <hook type="before_build" src="scripts/apply-changes.js" />
        <hook type="after_plugin_install" src="scripts/apply-changes.js" />

        <preference name="play-services-ads" default="18.0.0" />
        <preference name="play-services-ads-identifier" default="17.0.0" />
        <preference name="play-services-ads-lite" default="18.0.0" />
        <preference name="play-services-afs-native" default="17.0.0" />
        <preference name="play-services-analytics" default="17.0.0" />
        <preference name="play-services-analytics-impl" default="17.0.0" />
        <preference name="play-services-appinvite" default="18.0.0" />
        <preference name="play-services-audience" default="17.0.0" />
        <preference name="play-services-auth" default="17.0.0" />
        <preference name="play-services-auth-api-phone" default="17.0.0" />
        <preference name="play-services-awareness" default="17.0.0" />
        <preference name="play-services-base" default="17.0.0" />
        <preference name="play-services-basement" default="17.0.0" />
        <preference name="play-services-cast" default="17.0.0" />
        <preference name="play-services-cast-framework" default="17.0.0" />
        <preference name="play-services-clearcut" default="17.0.0" />
        <preference name="play-services-cronet" default="17.0.0" />
        <preference name="play-services-drive" default="17.0.0" />
        <preference name="play-services-fido" default="18.0.0" />
        <preference name="play-services-fitness" default="17.0.0" />
        <preference name="play-services-flags" default="17.0.0" />
        <preference name="play-services-games" default="18.0.0" />
        <preference name="play-services-gass" default="18.0.0" />
        <preference name="play-services-gcm" default="17.0.0" />
        <preference name="play-services-identity" default="17.0.0" />
        <preference name="play-services-iid" default="17.0.0" />
        <preference name="play-services-instantapps" default="17.0.0" />
        <preference name="play-services-location" default="17.0.0" />
        <preference name="play-services-maps" default="17.0.0" />

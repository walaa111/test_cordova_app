        <preference name="play-services-nearby" default="17.0.0" />
        <preference name="play-services-oss-licenses" default="17.0.0" />
        <preference name="play-services-panorama" default="17.0.0" />
        <preference name="play-services-phenotype" default="17.0.0" />
